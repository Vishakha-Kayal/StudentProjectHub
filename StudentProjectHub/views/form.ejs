<% include ./partials/header.ejs%>
<div class="w-full min-h-screen bg-[#e4ebe8]">
    <div class="w-[60%] h-[15%] flex flex-col m-auto">
        <div class="w-full mt-6 flex items-center gap-2">
            <div class="w-[2rem] h-[2rem] rounded-full flex items-center justify-center border-2 border-[#43856F] ">
                <i class="ri-mail-fill text-[#43856F] "></i>
            </div>
            <div class=" h-[0.5vh] w-[25%] bg-[#43856F]"></div>
            <div
                class="  w-[2rem] h-[2rem] rounded-full bg-[#e4ebe8] flex items-center justify-center border-2 border-[#43856F] ">
                <i class="ri-verified-badge-fill text-[#43856F]"></i>
            </div>
            <div class=" h-[0.5vh] w-[25%] bg-[#43856F]"></div>
            <div
                class=" w-[2rem] h-[2rem] rounded-full bg-[#e4ebe8] flex items-center justify-center border-2 border-[#43856F] ">
                <i class="ri-file-edit-fill text-[#43856F]"></i>
            </div>
            <div class="opacity-40 h-[0.5vh] w-[25%] bg-[#43856F]"></div>
            <div
                class=" opacity-40 w-[2rem] h-[2rem] rounded-full bg-[#e4ebe8] flex items-center justify-center border-2 border-[#43856F] ">
                <i class="ri-checkbox-fill text-[#43856F]"></i>
            </div>
        </div>
        <div class="w-[110%] h-[80%] -ml-[4%] flex items-center justify-between ">
            <div>
                <h1 class="text-[#43856F] text-xl whitespace-nowrap">Enter Email</h1>
            </div>
            <div>
                <h1 class="text-[#43856F] text-xl whitespace-nowrap ml-6">Verify OTP</h1>
            </div>
            <div>
                <h1 class="text-[#43856F] text-xl whitespace-nowrap  ml-10">Fill Details</h1>
            </div>
            <div>
                <h1 class="text-[#43856F] text-xl whitespace-nowrap opacity-30 ">Project Uploaded</h1>
            </div>
        </div>
    </div>

    <div class="w-[90%]  bg-[#43856f1f]  m-auto rounded-md overflow-hidden mt-7">
        <div class="first-sec w-full h-full">
            <div class="w-full h-14 flex items-center justify-between bg-[#58b19b]">
                <div class="flex items-center justify-center gap-4 text-[#e4ebe8]">
                    <div class="bg-[#285647c4] rounded-full w-[2rem] h-[2rem] ml-10  mt-1 flex items-center justify-center"><i class="ri-number-1 pr-[0.2rem] font-extrabold"></i></div>
                    <h1 class="text-2xl font-semibold">Project Information</h1>
                </div>
                <i class="ri-arrow-drop-up-line text-4xl w-14 text-white"></i>
                <i class="ri-arrow-drop-down-line text-4xl w-14 hidden"></i>
            </div>

            <div class="w-full h-full flex">
                <div class="details-first-sec w-[55%] opacity-70 ml-10">
                        <form action="/submitform" method="post">
                        <div class="w-full ">
                            <h1 class="mt-14 text-xl font-semibold">Project Title</h1>
                            <div class="project-title w-[80%]">
                                <input required type="text" name=""
                                    placeholder="Example : Speech Recognition Software"
                                    class="rounded-md px-3 py-2 mt-3 w-full  border-2   border-[#000000b9] ">
                            </div>
                        </div>

                        <div class="w-full">
                            <h1 class="mt-4 text-xl font-semibold">Project Category</h1>
                            <div class="project-category w-[80%]">
                                <select name="category" id=""
                                    class="placeholder rounded-md px-3 py-2 mt-3 w-full border-2 border-[#000000b9] ">
                                    <option value="" disabled selected class="hidden">Choose Category
                                    </option>
                                    <option value="technical" class="text-black">Technical</option>
                                    <option value="management" class="text-black">Management</option>
                                    <option value="science" class="text-black">Science</option>
                                </select>
                            </div>
                        </div>

                        <div class="w-full">
                            <h1 class="mt-4 text-xl font-semibold">Project Description</h1>
                            <div class="project-description w-[95%]">
                                <textarea name="" id="" cols="70" rows="5"
                                    class="w-[84.2%] px-3 py-2 mt-3 border-2 border-[#000000b9] rounded-md capitalize -tracking-tight"
                                    ></textarea>
                            </div>
                        </div>

                        <div class="w-full">
                            <h1 class="mt-4 text-xl font-semibold mb-4">Upload Project Images</h1>
                            <div class="project-images rounded-md flex w-[90%]">
                                <h1><input type="file" name="projectImages[]" id="projectImages" class="w-full px-3 py-2 mt-3 hidden" multiple></h1>
                                <div class="w-[24%] h-32 border-2 border-black border-dashed flex flex-col justify-center items-center gap-2">
                                    <h2><i class="ri-image-add-fill ic cursor-pointer" style="font-size: 24px;"></i></h2>
                                    <h1 class="text-lg font-semibold opacity-70">Upload Image</h1>
                                </div>
                                
                                <div class="images h-32 flex gap-4 hidden">
                                    <!-- <img src="/images/form-image.png" class="w-full" alt="">
                                    <img src="/images/form-image.png" class="w-full" alt="">
                                    <img src="/images/form-image.png" class="w-full" alt=""> -->
                                </div>
                               
                            </div>
                        </div>

                        <div class="w-full mb-4">
                            <button class="w-[28%] bg-[#43856F] text-white mt-4 py-3 rounded-md font-semibold tracking-wider">SAVE & NEXT</button>
                        </div>
                    </div>
                </form>
                <div class="right w-[45%] h-[100vh]">
                    <img src="/images/form-image.webp" alt="" class="w-full h-full object-cover ">
                 
                </div>
            </div>

        </div>
        <div class="second w-full h-full">
            <div class="w-full h-14 flex items-center justify-between bg-[#58b19b] uniInfo point-cursor">
                <div class="flex items-center justify-center gap-4 text-[#e4ebe8]">
                    <div class="bg-[#285647c4] rounded-full w-[2rem] h-[2rem] ml-10  mt-1 flex items-center justify-center"><i class="ri-number-2  font-extrabold"></i></div>
                    <h1 class="text-2xl font-semibold">University Information</h1>
                </div>
                <i class="ri-arrow-drop-up-line text-4xl w-14 text-white"></i>
                <i class="ri-arrow-drop-down-line text-4xl w-14 hidden"></i>
            </div>

            <div class="w-full h-full flex uniDets">
                <div class="details-scnd-first w-[55%] opacity-70 ml-10">
                    <form action="/submitform" method="post" class="flex flex-col w-full h-full">
                        <div class="w-full h-[20vh]">
                            <h1 class="mt-14 text-xl font-semibold">University Name</h1>
                            <div class="project-title w-[80%]">
                                <input required type="text" name="universityName"
                                    placeholder="Example: Poddar International College"
                                    maxlength="30"
                                    class="rounded-md px-3 py-2 mt-3 w-full  border-2   border-[#000000b9] universityName">
                            </div>
                            <div class="w-[80%] hidden limit"><h1 class="text-red-600 ml-[0.3rem] ">Maximum word limit is 30</h1></div>
                        </div>
                        <div class="w-full">
                            <h1 class="mt-14 text-xl font-semibold">Student Information</h1>
                            <div class="flex mt-1 ">
                            <div class="w-[40%] h-[50vh] ">
                                <div class="w-full h-[20%]  text-xl flex items-center " >
                                    <h1>Student Name</h1>
                                </div>
                                <div class="w-full h-[80%] ">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                </div>
                            </div>
                            <div class="w-[40%] h-[50vh] ">
                                <div class="w-full h-[20%]  text-xl flex items-center " >
                                    <h1>Student Stream</h1>
                                </div>
                                <div class="w-full h-[80%] ">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                </div>
                            </div>
                            <div class="w-[40%] h-[50vh] ">
                                <div class="w-full h-[20%]  text-xl flex items-center " >
                                    <h1>Year Of Qualification</h1>
                                </div>
                                <div class="w-full h-[80%] ">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                    <input type="text" class="w-full px-3 py-2 border-[1px] border-black">
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="w-full mb-4">
                            <input type="submit" value="SUBMIT" class="w-[20%] bg-[#43856F] text-lg text-white mt-4 py-3 rounded-md font-semibold tracking-wider">
                        </div>
                    </form>
                </div>
                <div class="details-scnd-scnd w-[45%] h-[100vh]"></div>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/form.js">
</script>

