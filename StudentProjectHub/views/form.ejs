<% include ./partials/header.ejs%>
    <div class="w-full min-h-screen bg-[#e4ebe8]">
        <div class="w-[60%] h-[15%] flex flex-col m-auto">
            <div class="w-full mt-6 flex items-center gap-2">
                <div class="w-[2rem] h-[2rem] rounded-full flex items-center justify-center border-2 border-[#43856F] ">
                    <i class="ri-mail-fill text-[#43856F] "></i>
                </div>
                <div class=" h-[0.5vh] w-[25%] bg-[#43856F]"></div>
                <div
                    class="  w-[2rem] h-[2rem] rounded-full bg-[#e4ebe8] flex items-center justify-center border-2 border-[#43856F] ">
                    <i class="ri-verified-badge-fill text-[#43856F]"></i>
                </div>
                <div class=" h-[0.5vh] w-[25%] bg-[#43856F]"></div>
                <div
                    class=" w-[2rem] h-[2rem] rounded-full bg-[#e4ebe8] flex items-center justify-center border-2 border-[#43856F] ">
                    <i class="ri-file-edit-fill text-[#43856F]"></i>
                </div>
                <div class="opacity-40 h-[0.5vh] w-[25%] bg-[#43856F]"></div>
                <div
                    class=" opacity-40 w-[2rem] h-[2rem] rounded-full bg-[#e4ebe8] flex items-center justify-center border-2 border-[#43856F] ">
                    <i class="ri-checkbox-fill text-[#43856F]"></i>
                </div>
            </div>
            <div class="w-[110%] h-[80%] -ml-[4%] flex items-center justify-between ">
                <div>
                    <h1 class="text-[#43856F] text-xl whitespace-nowrap">Enter Email</h1>
                </div>
                <div>
                    <h1 class="text-[#43856F] text-xl whitespace-nowrap ml-6">Verify OTP</h1>
                </div>
                <div>
                    <h1 class="text-[#43856F] text-xl whitespace-nowrap  ml-10">Fill Details</h1>
                </div>
                <div>
                    <h1 class="text-[#43856F] text-xl whitespace-nowrap opacity-30 ">Project Uploaded</h1>
                </div>
            </div>
        </div>

        <div class="w-[90%]  bg-[#43856f1f]  m-auto rounded-md overflow-hidden mt-7">
            <div class="first-sec w-full h-full">
                <div
                    class="w-full h-[3.8rem] flex items-center justify-between bg-[#58b19b] border-b-2 border-[#43856f1f ]">
                    <div class="flex items-center justify-center gap-4 text-[#e4ebe8]">
                        <div
                            class="bg-[#285647c4] rounded-full w-[2rem] h-[2rem] ml-10  mt-1 flex items-center justify-center">
                            <i class="ri-number-1 pr-[0.2rem] font-extrabold"></i>
                        </div>
                        <h1 class="text-2xl font-semibold">Project Information</h1>
                    </div>
                    <i
                        class="ri-arrow-drop-up-line text-5xl w-14 text-white projectInfoUp point-cursor hover:scale-125 transition-all duration-100 ease-in-out "></i>
                    <i
                        class="ri-arrow-drop-down-line text-5xl w-14 text-white hidden projectInfoDown point-cursor hover:scale-125 transition-all duration-100 ease-in-out"></i>
                </div>

                <div class="w-full h-full flex projectDets">
                    <div class="details-first-sec w-[55%] opacity-70 ml-10">
                        <h4 class="mt-4 opacity-75">Basic details to define the project</h4>

                        <form action="/submitForm" method="post"  class="flex flex-col w-full h-full form1" enctype="multipart/form-data">
                            <div class="w-full ">
                                <h1 class="mt-4 text-xl font-semibold">Project Title</h1>
                                <div class="project-title w-[80%]">
                                    <input required type="text" name="projectTitle"
                                        placeholder="Example : Speech Recognition Software"
                                        class="rounded-md px-3 py-2 mt-3 w-full  border-2   border-[#000000b9] required:">
                                </div>
                            </div>

                            <div class="w-full">
                                <h1 class="mt-4 text-xl font-semibold">Project Category</h1>
                                <div class="project-category w-[80%]">
                                    <select name="projectCategory" id="" required
                                        class="placeholder rounded-md px-3 py-2 mt-3 w-full border-2 border-[#000000b9] ">
                                        <option value="" disabled selected class="hidden">Choose Category
                                        </option>
                                        <option value="Technical" class="text-black">Technical</option>
                                        <option value="Management" class="text-black">Management</option>
                                        <option value="Science" class="text-black">Science</option>
                                    </select>
                                </div>
                            </div>

                            <div class="w-full">
                                <h1 class="mt-4 text-xl font-semibold">Project Description</h1>
                                <div class="project-description w-[95%]">
                                    <textarea name="projectDescription" id="" cols="70" rows="5" required
                                        class="w-[84.2%] px-3 py-2 mt-3 border-2 border-[#000000b9] rounded-md capitalize -tracking-tight resize-none"></textarea>
                                </div>
                            </div>

                            <div class="w-full">
                                <h1 class="mt-4 text-xl font-semibold mb-4">Project Images <span class="text-sm text-red-500 font-semibold">(Maximum file size 150kb)</span></h1>
                                <div class="project-images rounded-md flex w-[90%] ">
                                    <h1><input type="file" name="projectImages" id="projectImages"
                                            class="projectImages w-full px-3 py-2 mt-3 hidden" multiple ></h1>
                                    <div
                                        class="pl-2 w-[90%] h-32 flex items-center gap-4 border-2  border-[#000000a4] rounded-md overflow-x-auto  projectImg">
                                        <div
                                            class="cursor-pointer w-[25%] h-[83%] flex flex-col justify-center projectImage items-center  gap-2  border-2 bg-[#F1F5F4] border-black border-dashed">
                                            <h2><i class="ri-image-add-fill " style="font-size: 24px;"></i>
                                            </h2>
                                            <h1 class="text-sm font-semibold opacity-70">Upload Images</h1>
                                        </div>
                                        <div class="images-form w-[75%] h-[83%] flex gap-4 items-center pr-2">

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="w-full mb-6 mt-2 saveBtn">
                                <input type="submit" value="SAVE & NEXT"
                                    class="nextBtn w-[28%] bg-[#028977] text-white mt-4 py-3 rounded-md font-semibold tracking-wider transition-all duration-[0.5s] ease-in-out point-cursor hover:bg-[#4d9c89]">
                            </div>
                    </div>
                    </form>
                    <div class="right w-[45%] h-[100vh]">
                        <img src="/images/form-image.webp" alt="" class="w-full h-full object-cover ">

                    </div>
                </div>

            </div>
            <div class="second w-full h-full">
                <div class="w-full h-14 flex items-center justify-between bg-[#58b19b]  ">
                    <div class="flex items-center justify-center gap-4 text-[#e4ebe8]">
                        <div
                            class="bg-[#285647c4] rounded-full w-[2rem] h-[2rem] ml-10  mt-1 flex items-center justify-center">
                            <i class="ri-number-2 font-extrabold "></i>
                        </div>
                        <h1 class="text-2xl font-semibold">University Information</h1>
                    </div>
                    <i
                        class="ri-arrow-drop-up-line text-5xl w-14 text-white uniInfoUp hidden point-cursor hover:scale-125 transition-all duration-100 ease-in-out"></i>
                    <i
                        class="ri-arrow-drop-down-line text-5xl text-white w-14  uniInfoDown point-cursor hover:scale-125 transition-all duration-100 ease-in-out"></i>
                </div>

                <div class="w-full min-h-full flex uniDets hidden ">
                    <div class="details-scnd-first w-[55%] opacity-70 ml-10">
                        <h4 class="mt-4  opacity-75 ">Basic details of the university</h4>
                        
                        <form action="/submitForm" method="post" class="flex flex-col w-full h-full form2" enctype="multipart/form-data">
                            <div class="w-full h-[20vh] ">
                                <h1 class="mt-4 text-xl font-semibold">University Name</h1>
                                <div class="project-title w-[80%]">
                                    <input required type="text" name="universityName"
                                        placeholder="Example: Poddar International College" maxlength="40"
                                        class="rounded-md px-3 py-2 mt-3 w-full  border-2   border-[#000000b9] universityName">
                                </div>
                                <div class="w-[80%] hidden limit">
                                    <h1 class="text-red-500 text-sm ml-[0.3rem] font-semibold">Maximum word limit is 30</h1>
                                </div>
                            </div>

                            <div class="w-full h-[28vh] ">
                                <div class="w-[80%] h-full">
                                    <h1><input type="file" name="universityLogo" id="universityLogo"
                                            class="w-full px-3 py-2 mt-3 hidden universityLogo"></h1>
                                    <h1 class=" text-xl font-semibold mb-4">University Logo <span class="text-sm text-red-500 font-semibold pb-2">(Maximum file size 100kb)</span></h1>
                                    <div class="w-full h-[60%] flex gap-2">
                                    <div
                                        class="cursor-pointer w-[23%] h-full flex flex-col justify-center items-center  gap-2 ic border-2 bg-[#F1F5F4] border-black border-dashed">
                                        <h2><i class="ri-image-add-fill" style="font-size: 24px;"></i>
                                        </h2>
                                        <h1 class="text-md font-semibold  opacity-70">Upload Logo</h1>
                                    </div>
                                    <div class="w-[19%] h-full uni-logo">
                                    
                                    </div>
                                    </div>
                                </div>
                            </div>

                            <div class="w-full  studentInfo">
                                <div class="w-full">
                                    <h1 class=" text-xl font-semibold">Student's Information <span
                                            class="text-sm opacity-75">(Details of the project contributor)</span></h1>
                                    <div class="flex mt-1 gap-4">
                                        <div class="w-[35%] ">
                                            <input type="text" name="studentName_1" 
                                                class="rounded-md px-3 py-2 mt-3 w-full  border-2  border-[#000000b9]"
                                                placeholder="Student Name">

                                        </div>
                                        <div class="w-[35%] ">
                                            <input type="text" name="studentStream_1" 
                                                class="rounded-md px-3 py-2 mt-3 w-full  border-2  border-[#000000b9]"
                                                placeholder="Student Stream">

                                        </div>

                                        <div class="w-[35%] ">
                                            <input type="number" name="yearOfQualification_1" 
                                                class="rounded-md px-3 py-2 mt-3 w-full  border-2  border-[#000000b9]"
                                                placeholder="Year Of Qualification">

                                        </div>

                                    </div>
                                </div>

                                <div class="w-full mt-2">

                                    <div class="flex mt-1 gap-4">
                                        <div class="w-[35%]  ">
                                            <input type="text" name="studentName_2"
                                                class="rounded-md px-3 py-2 mt-3 w-full  border-2  border-[#000000b9]"
                                                placeholder="Student Name">

                                        </div>
                                        <div class="w-[35%]  ">
                                            <input type="text" name="studentStream_2" 
                                                class="rounded-md px-3 py-2 mt-3 w-full  border-2  border-[#000000b9]"
                                                placeholder="Student Stream">

                                        </div>

                                        <div class="w-[35%]  ">
                                            <input type="number" name="yearOfQualification_2" 
                                                class="rounded-md px-3 py-2 mt-3 w-full  border-2  border-[#000000b9]"
                                                placeholder="Year Of Qualification">

                                        </div>

                                    </div>
                                </div>

                            </div>

                            <div class="w-full mb-2 mt-4 ">
                                <div class="w-[26%] flex gap-1 items-center another">
                                    <i class="ri-add-circle-line text-[#018B75] font-bold text-lg point-cursor mb-[0.1rem]"></i>
                                    <h1 class="text-[#018B75] mb-[0.2rem] font-bold point-cursor">Add another field</h1>
                                </div>
                                <div class="w-[170%] mt-5 flex gap-1">
                                    <input type="checkbox" name="approvedProject" id="" class="align-top w-6 h-6 mt-[0.1rem]" required>
                                    <p class="text-md">
                                        We hereby grant <span class="text-[#018B75] font-semibold">StudentProjectHub</span> the permission to showcase our project on its website. We affirm that we hold the <span class="text-[#018B75] font-semibold">copyright</span> to the submitted project and authorize its use for these purposes.
                                    </p>
                                </div>
                            </div>

                            <div class="w-full mb-6 mt-4 ">
                                <div
                                    class="w-[30%] bg-[#028977] flex items-center justify-center rounded-md overflow-hidden point-cursor transition-all duration-[0.5s] ease-in-out submitBtn">
                                    <input type="submit" value="SUBMIT"
                                        class="w-[60%] bg-[#028977] text-xl text-white -ml-[1.5rem] py-3  font-semibold tracking-wider transition-all duration-[0.5s] ease-in-out point-cursor ">
                                    <i
                                        class="ri-send-plane-fill text-xl rotate-45 -ml-[1rem] mt-[0.3rem] text-white point-cursor"></i>
                                </div>
                            </div>
                        </form>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
    <script src="/javascripts/form.js">
    </script>