<% include ./partials/header.ejs%>
    <div class="w-full h-screen bg-[#e4ebe8] flex flex-col items-center justify-center">
        
        <% if(passwordReseted){ %>
            <div class="px-3 h-10 bg-green-600 -mt-12 mb-5 invalidStyle flex items-center justify-center rounded-lg">
                <h1 class="text-white text-lg">Password reset successfully !!</h1>
            </div>
            <% } %>
        <% if(userNotFound){ %>
            <div class="px-3 h-10 bg-[#df2d00e3] -mt-12 mb-5 invalidStyle flex items-center justify-center rounded-lg">
                <h1 class="text-white text-lg">Invalid Username Or Email !!</h1>
            </div>
            <% } %>
        <% if(InvalidPassword){ %>
            <div class="px-3 h-10 bg-[#df2d00e3] -mt-12 mb-5 invalidStyle flex items-center justify-center rounded-lg">
                <h1 class="text-white text-lg">Incorrect Password !!</h1>
            </div>
            <% } %>


                <div class="w-[65%] h-[80%] bg-[#009D85] rounded-xl flex overflow-hidden">
                    <div class="w-[45%] h-full flex items-center justify-center relative">
                        <div class="w-[95%] h-[95%] bg-[#e4ebe8] rounded-xl "><img src="images/login.webp"
                                class="w-full h-[99.5%] object-cover absolute left-7" alt=""></div>
                    </div>
                    <div class="w-[55%] h-full flex flex-col  ">
                        <div class="w-full h-[90%] flex items-center flex-col px-7">
                            <div class="w-full h-[20%] flex items-center justify-center">
                                <h1 class="font-bold text-2xl w-full text-center mr-6 text-white">Welcome Back!</h1>
                            </div>
                            <div class="w-full h-full ">
                                <form action="/login" method="post" class="w-full h-full flex flex-col gap-2">
                                    <div class="w-full flex flex-col gap-2 px-4">
                                        <h1 class="font-semibold text-medium text-white">Username</h1>
                                        <div
                                            class="w-[90%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8] flex items-center gap-2 ">
                                            <i class="ri-user-2-fill"></i><input type="text"
                                                class=" outline-none w-full h-full bg-inherit"
                                                placeholder="Enter username" name="username">
                                        </div>
                                    </div>
                                    <div class="w-[90%] h-[5%]  flex items-center justify-center gap-2 px-4 mt-2">
                                        <div class="w-[40%] h-[1%] bg-white"></div>
                                        <h1 class="text-semibold text-white text-lg">OR</h1>
                                        <div class="w-[40%] h-[1%] bg-white"></div>
                                    </div>
                                    <div class="w-full flex flex-col gap-2 px-4">
                                        <h1 class="font-semibold text-medium text-white">Email</h1>
                                        <div
                                            class="w-[90%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8]  flex items-center gap-2">
                                            <i class="ri-mail-fill"></i><input type="email"
                                                class="outline-none w-full h-full bg-inherit" placeholder="Enter email"
                                                name="email"></div>
                                    </div>
                                    <div class="w-full flex flex-col gap-2 px-4 ">
                                        <h1 class="font-semibold text-medium text-white">Password</h1>
                                        <div
                                            class="w-[90%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8] flex items-center gap-2">
                                            <i class="ri-lock-2-fill"></i>
                                            <input type="password" class="pass outline-none w-[90%] h-full bg-inherit"
                                                placeholder="Enter password" name="password">
                                            <i class="ri-eye-fill open point-cursor"></i>
                                        </div>
                                        <a href="/forgotpsswd"
                                            class="point-cursor hover:underline text-white transition-all duration-500 ease-in-out">
                                            <h1 class="text-sm text-white">Forgot Password?</h1>
                                        </a>
                                    </div>
                                    <div class="w-full grid place-items-center px-4 mt-3 ">
                                        <input type="submit" value="Login"
                                            class="w-[30%] h-[2.5rem] rounded-md px-2 bg-black text-white font-bold text-xl mr-7 point-cursor">
                                    </div>
                                </form>
                            </div>
                            <div class="w-full flex items-center justify-center mb-2 gap-1 mr-3">
                                <h1 class="">Dont't have an account</h1><a href="/signup"
                                    class="text-gray-50 font-semibold underline point-cursor">Signup</a>
                            </div>
                        </div>
                    </div>

                </div>
    </div>

    <script src="javascripts/login.js"></script>