<% include ./partials/header.ejs%>
    <div class="w-full h-screen bg-[#e4ebe8] flex justify-center items-center">
        <div class="w-[30vw] h-4/5 bg-[#009D85] rounded-lg overflow-hidden">
            <div class="flex justify-start mt-7 mb-2 text-2xl gap-24 pl-3 items-center">
                <h1><i class="ri-arrow-drop-left-line text-4xl text-white"></i></h1>
                <h1 class="text-white font-semibold text-2xl">Forgot Password</h1>
            </div>
            <div class="w-full flex justify-center h-40 py-2 relative  overflow-hidden ">
                <div class="rounded-full bg-[#e4ebe8] h-full w-36 flex justify-center items-center"><i class="ri-lock-password-fill text-8xl"></i></div>
                <div class="absolute bottom-5 right-[41%] bg-black rounded-full "><i class="ri-question-fill text-4xl text-white "></i></div>
            </div>

            <div class="w-full flex justify-center py-2">
                <h2 class="capitalize w-[80%] text-center text-white font-semibold">Please enter your email address or username to recieve <span class="lowercase">a</span> link .</h2>
            </div>
            <form action="" class="w-full h-full flex flex-col gap-2 items-center mt-3">
                <div class="w-full flex flex-col gap-2 px-4 items-center">
                <div class="w-[77%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8] flex items-center gap-2 "><i class="ri-user-2-fill"></i><input type="text" class=" outline-none w-full h-full bg-inherit" placeholder="Enter username"></div>
                </div>
                <div class="w-[90%] h-[5%]  flex items-center justify-center gap-2 px-4 mt-2">
                    <div class="w-[40%] h-[1%] bg-white"></div>
                    <h1 class="text-semibold text-white text-lg">OR</h1>
                    <div class="w-[40%] h-[1%] bg-white"></div>
                </div>
                <div class="w-full flex flex-col gap-2 px-4 items-center">
                <div class="w-[77%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8]  flex items-center gap-2"><i class="ri-mail-fill"></i><input type="email" class="outline-none w-full h-full bg-inherit" placeholder="Enter email"></div>
                </div>
              
                <div class="w-full flex justify-center px-4 mt-6" >
                    <input type="submit" value="Send" class="w-[30%] h-[2.5rem] rounded-md px-2 bg-black text-white font-bold text-xl point-cursor">
                </div>
                </form>
        </div>
    </div>