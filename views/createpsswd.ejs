<% include ./partials/header.ejs%>
    <div class="w-full h-screen bg-[#e4ebe8] flex justify-center items-center">
        <div class="w-[30vw] h-[87vh] bg-[#009D85] rounded-lg overflow-hidden">
            <div class="flex justify-center mt-7 mb-2 text-2xl gap-20  items-center">
                <h1 class="text-white font-semibold text-2xl">Create New Password</h1>
            </div>
            <div class="w-full flex justify-center h-40 py-2 relative  overflow-hidden ">
                <div class="rounded-full bg-[#e4ebe8] h-full w-36 flex justify-center items-center"><i
                        class="ri-lock-password-fill text-8xl"></i></div>
                <div class="absolute bottom-5 right-[41%] bg-white rounded-full "><i
                        class="ri-check-fill text-4xl text-black "></i></div>
            </div>

            <div class="w-full flex justify-center py-2">
                <h2 class="capitalize w-[80%] text-center text-white  text-xl">Your new password must be different
                    from previously used new password.</h2>
            </div>
            <div class=" w-full justify-center flex ">
                <h1 class="bg-[#df2d00e3] text-white px-2 rounded-md py-1 text-sm passMatch hidden"></h1>
            </div>
            <form action="/createpsswd" method="post" class="w-full h-full flex flex-col gap-3 items-center mt-3 myForm">

                <div class="w-full flex flex-col gap-2 px-4 items-center">
                    <h1 class="font-semibold text-medium text-white">New Pasword</h1>
                    <div class="w-[77%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8] flex items-center gap-2 ">
                        <input type="password" class=" outline-none w-full h-full bg-inherit newPassword"
                            name="newPassword"> <i class="ri-eye-fill  open point-cursor"></i>
                    </div>
                </div>

                <div class="w-full flex flex-col gap-2 px-4  items-center">
                    <h1 class="font-semibold text-medium text-white">Confirm Pasword</h1>
                    <div class="w-[77%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8]  flex items-center gap-2"><input
                            type="password" class="outline-none w-full h-full bg-inherit confirmPassword"
                            name="confirmPassword"> <i class="ri-eye-fill  open point-cursor"></i></div>
                </div>

                <div class="w-full flex justify-center px-4 mt-6 flex-col items-center gap-2">
                    <input type="submit" value="Save"
                        class="w-[30%] h-[2.5rem] rounded-md px-2 bg-black text-white font-bold text-xl point-cursor">
                </div>
            </form>
        </div>
    </div>
    <script src="/javascripts/createpsswd.js"></script>