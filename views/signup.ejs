<% include ./partials/header.ejs%>
<div class="w-full h-screen bg-[#e4ebe8] flex items-center justify-center">
    <div class="w-[65%] h-[80%] bg-[#01756631] rounded-xl flex overflow-hidden">
        <div class="w-[55%] h-full flex flex-col ">
            <div class="w-full h-[15%] flex  items-center  gap-2 px-4">
                <img src="images/logo1.png" class="w-[10%] h-[40%] object-contain" alt="">
                <h1 class="font-bold">StudentProjectHub</h1></div>
            <div class="w-full h-[80%] flex items-center flex-col px-7 ">
                <div class="w-full h-[20%] flex items-center justify-center"><h1 class="font-bold text-2xl w-full text-center mr-6">Create an account</h1></div>
                <div class="w-full h-full ">
                    <form action="/signup" method="post" class="w-full h-full flex flex-col gap-2">
                    <div class="w-full flex flex-col gap-2 px-4">
                    <h1 class="font-semibold text-medium">Username</h1>
                    <div class="w-[90%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8] flex items-center gap-2 "><i class="ri-user-2-fill"></i><input type="text" class=" outline-none w-full h-full bg-inherit" placeholder="Enter username" ></div>
                    </div>
                    <div class="w-full flex flex-col gap-2 px-4">
                    <h1 class="font-semibold text-medium">Email</h1>
                    <div class="w-[90%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8]  flex items-center gap-2"><i class="ri-mail-fill"></i><input type="email" class="outline-none w-full h-full bg-inherit" placeholder="Enter email"></div>
                    </div>
                    <div class="w-full flex flex-col gap-2 px-4 ">
                    <h1 class="font-semibold text-medium">Password</h1>
                    <div class="w-[90%] h-[2.2rem] rounded-md px-2 bg-[#e4ebe8]  flex items-center gap-2"><i class="ri-lock-2-fill"></i><input type="password" class="pass outline-none w-full h-full bg-inherit" placeholder="Enter password" autocomplete="current-password">
                        <i class="ri-eye-fill  open point-cursor"></i>
                    </div>
                    </div>
                    <div class="w-full grid place-items-center px-4 mt-3">
                        <input type="submit" value="Signup" class="w-[30%] h-[2.5rem] rounded-md px-2 bg-[#29877A] text-white text-xl mr-7 point-cursor">
                    </div>
                    </form>
                </div>
                <div class="w-full flex items-center justify-center mb-2 gap-1 mr-3"><h1>Already have an account?</h1><a href="/login" class="text-[#29877A] font-semibold underline point-cursor">Login</a></div>
            </div>
        </div>
        <div class="w-[45%] h-full flex items-center justify-center relative">
            <div class="w-[95%] h-[95%] bg-[#e4ebe8] rounded-xl "><img src="images/signup.webp" class="w-full h-full object-cover absolute right-4 bottom-5" alt=""></div>
        </div>
    </div>
</div>

<script src="javascripts/signup.js"></script>